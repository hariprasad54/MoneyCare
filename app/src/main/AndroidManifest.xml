<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.moneycare">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.WRITE_SMS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MoneyCare"
        tools:targetApi="31">
        <activity
            android:name=".VersionInfoActivity"
            android:label="Version Info"
            android:theme="@style/Theme.MoneyCare.WithActionBar"
            android:exported="false" />
        <activity
            android:name=".RateUsActivity"
            android:label="Rate Us"
            android:theme="@style/Theme.MoneyCare.WithActionBar"
            android:exported="false" />
        <activity
            android:name=".AboutUsActivity"
            android:label="About Us"
            android:theme="@style/Theme.MoneyCare.WithActionBar"
            android:exported="false" />
        <activity
            android:name=".AprovalOrRejectedActivity"
            android:exported="false"
            android:label="Approval Status"
            android:theme="@style/Theme.MoneyCare.WithActionBar" />
        <activity
            android:name=".AdminApprovalSubActivity"
            android:exported="false"
            android:label="Sub List"
            android:theme="@style/Theme.MoneyCare.WithActionBar" />
        <activity
            android:name=".AdminApprovalSuperActivity"
            android:exported="false"
            android:label="Pending Approval List"
            android:theme="@style/Theme.MoneyCare.WithActionBar" />
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.MoneyCare.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AmountDepositActivity"
            android:exported="false"
            android:label="Amount Deposit"
            android:theme="@style/Theme.MoneyCare.WithActionBar" />
        <activity
            android:name=".AmountWithdrawActivity"
            android:label="Amount Withdraw"
            android:theme="@style/Theme.MoneyCare.WithActionBar"
            android:exported="false" />
        <activity
            android:name=".EditBankAccountActivity"
            android:exported="false"
            android:label="Edit Bank Account"
            android:theme="@style/Theme.MoneyCare.WithActionBar" />
        <activity
            android:name=".AddBankAccountActivity"
            android:exported="false"
            android:label="Add Bank Account"
            android:theme="@style/Theme.MoneyCare.WithActionBar" />
        <activity
            android:name=".MyReferralsActivity"
            android:exported="false"
            android:label="My Referrals"
            android:theme="@style/Theme.MoneyCare.WithActionBar" />
        <activity
            android:name=".UserTeamActivity"
            android:exported="false"
            android:label="Your Team"
            android:theme="@style/Theme.MoneyCare.WithActionBar" />
        <activity
            android:name=".BankDetailsActivity"
            android:exported="false"
            android:label="Your Bank Accounts"
            android:theme="@style/Theme.MoneyCare.WithActionBar" />
        <activity
            android:name=".ChangePasswordActivity"
            android:exported="false"
            android:label="Change Password"
            android:theme="@style/Theme.MoneyCare.WithActionBar" />
        <activity
            android:name=".OtpValidationActivity"
            android:exported="false"
            android:label="OTP Verification"
            android:theme="@style/Theme.MoneyCare.WithActionBar" />
        <activity
            android:name=".ProfileActivity"
            android:exported="false"
            android:label="Edit Profile"
            android:theme="@style/Theme.MoneyCare.WithActionBar" />
        <activity
            android:name=".RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:noHistory="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.MoneyCare.NoActionBar" />
    </application>

</manifest>